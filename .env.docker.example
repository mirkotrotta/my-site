# Ports for local development
FRONTEND_PORT=4000
API_PORT=8000
DB_PORT=5432

# PostgreSQL Database Configuration
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword
POSTGRES_DB=mydb
DATABASE_URL=postgresql://myuser:mypassword@db:5432/mydb

# Backend API Configuration
# URL for the frontend, used by FastAPI for CORS
FRONTEND_URL=http://localhost:4000
# GitHub token for the backend to fetch repository data
# Note: For local development, you may not need a real token if the API has fallback data
GH_BACKEND_TOKEN=your_github_pat_here_if_needed

# Frontend Configuration
# This is the URL the Next.js app will use for SERVER-SIDE requests to the API
# It must use the internal Docker network service name ('api') and port ('8000')
NEXT_PRIVATE_API_URL=http://api:8000
# This is the URL the Next.js app will use for CLIENT-SIDE requests to the API
# It must point to the exposed API port on the host machine
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api

# Analytics and Form Endpoints (Optional - can be left as is for local dev)
NEXT_PUBLIC_FORMSPREE_ENDPOINT=your_formspree_endpoint_here
BUTTONDOWN_API_KEY=your_buttondown_api_key_here
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_id_here
NEXT_PUBLIC_UMAMI_SCRIPT_URL=your_umami_script_url_here
NEXT_PUBLIC_UMAMI_WEBSITE_ID=your_umami_website_id_here